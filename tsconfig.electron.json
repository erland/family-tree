{
    "compilerOptions": {
      "target": "ES2022",
      "module": "ESNext",
      "moduleResolution": "Node",
      "outDir": "dist-electron",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "types": ["node", "electron"]
    },
    "include": ["electron"],
    "exclude": [
      "electron/__tests__/**",   // ðŸ‘ˆ exclude test folders
      "**/*.test.ts",            // ðŸ‘ˆ exclude any .test.ts file
      "src/**/__tests__/**",
      "node_modules",
      "dist",
      "coverage"
    ]
  }